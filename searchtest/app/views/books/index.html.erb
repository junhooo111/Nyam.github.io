<p id="notice"><%= notice %></p>

<h1>맛집 목록</h1>

  <%= form_tag books_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "검색" %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>식당명</th>
      <th>카테고리</th>
      <th>평점</th>
      <th>위치</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.category %></td>
        <td><%= book.score %></td>
        <td><%= book.location %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to '편집', edit_book_path(book) %></ㄴtd>
        <td><%= link_to '삭제', book, method: :delete, data: { confirm: '삭제하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




